<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Imi.Project.Mobile.Pages.AdminPage">
    <ContentPage.Content>
        <StackLayout>
            <ScrollView>
                <StackLayout Spacing="10" VerticalOptions="Center" Padding="10">
                    <Label Text="Add, edit or delete" Style="{StaticResource Title}"/>

                    <Button x:Name="btnProducts" Text="Products" Clicked="btnProducts_Clicked"/>
                    <Button x:Name="btnBrands" Text="Brands" Clicked="btnBrands_Clicked"/>
                    <Button x:Name="btnCategories" Text="Categories" Clicked="btnCategories_Clicked"/>
                </StackLayout>
            </ScrollView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>