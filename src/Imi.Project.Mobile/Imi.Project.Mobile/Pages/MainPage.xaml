<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Imi.Project.Mobile.MainPage">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Grid RowDefinitions="Auto, *, Auto, auto">
                    <Label Grid.Row="1" Text="Guitar Shop" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" FontSize="Header"/>
                    <Frame Grid.Row="2" HorizontalOptions="FillAndExpand" >
                        <Image Source="guitar.jpg"  HorizontalOptions="Fill" Aspect="AspectFit" />
                    </Frame>
                    <Button Grid.Row="3" Text="Login"  HorizontalOptions="FillAndExpand" Margin="20" FontSize="Large" Clicked="Login_Clicked" />
                    <Button Grid.Row="4" Text="Register" HorizontalOptions="FillAndExpand" Margin="20, 0, 20, 20" FontSize="Large" Clicked="Register_Clicked"/>
                </Grid>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
   