<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Imi.Project.Mobile.HomePage"
             Style="{StaticResource BasePageStyle}">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Label Text="Guitar Shop" Style="{StaticResource Title}"/>
                <Frame HorizontalOptions="FillAndExpand" >
                    <Image Source="guitar.jpg"  HorizontalOptions="Fill" Aspect="AspectFit" />
                </Frame>
                <Button Text="Login"  Style="{StaticResource PrimaryButton}" Clicked="Login_Clicked" />
                <Button Text="Register"  Style="{StaticResource PrimaryButton}" Clicked="Register_Clicked"/>
                <Button Text="Login as admin"  Style="{StaticResource PrimaryButton}" Clicked="LoginAdmin_Clicked"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
    