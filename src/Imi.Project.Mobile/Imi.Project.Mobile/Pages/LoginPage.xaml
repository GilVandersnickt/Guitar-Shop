<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Imi.Project.Mobile.Pages.LoginPage"
             Style="{StaticResource BasePageStyle}">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Style="{StaticResource SlDefaultStyle}">
                <Label Text="Log in" Style="{StaticResource Title}"/>
                <Frame HorizontalOptions="FillAndExpand" >
                    <Image Source="guitar.jpg"  HorizontalOptions="Fill" Aspect="AspectFit" />
                </Frame>
                <Entry  Placeholder="Username" HorizontalOptions="FillAndExpand" Margin="20"/>
                <Entry  Placeholder="Password" HorizontalOptions="FillAndExpand" Margin="20, 0, 20, 0"/>
                <Button Text="Forgot your password?" HorizontalOptions="Center" BackgroundColor="Transparent" BorderWidth="0" FontSize="Micro" />
                <Button Text="Login" Style="{StaticResource PrimaryButton}" Command="{Binding OpenMainPageCommand}" />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>